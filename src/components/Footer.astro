---
import { siteConfig, getCommunityLinks } from '../config/site';

const currentYear = new Date().getFullYear();
const communities = getCommunityLinks();

const navigation = [
  { name: 'Artikel', href: '/artikel/' },
  { name: 'Tutorials', href: '/tutorials/' },
  { name: 'Schulungen', href: `/schulungen/${siteConfig.training.mainCourse}/` },
  { name: 'Meetups', href: '/meetups/' },
  { name: 'Team', href: '/team/' },
];

const social = [
  { name: 'LinkedIn', href: siteConfig.linkedin_url },
  { name: 'GitHub', href: `https://github.com/${siteConfig.github_username}` },
  { name: 'RSS-Feed', href: '/feed.xml' },
];
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <div class="text-2xl font-bold mb-2">
          <span class="text-primary">{siteConfig.titleShort}</span><span class="text-white">{siteConfig.titleSuffix}</span>
        </div>
        <p class="text-sm text-gray-400">
          Powered by <a href={`${siteConfig.training.providerUrl}?utm_source=${siteConfig.utm_source}&utm_campaign=crossmarketing_permanent&utm_medium=portal&utm_content=footer_nav`} class="text-gray-300 hover:text-white">{siteConfig.training.provider}</a>
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-white font-semibold uppercase text-sm mb-4">Navigation</h4>
        <ul class="space-y-2">
          {navigation.map(item => (
            <li>
              <a href={item.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Communities -->
      <div>
        <h4 class="text-white font-semibold uppercase text-sm mb-4">Communities</h4>
        <ul class="space-y-2">
          {communities.map(item => (
            <li>
              <a href={item.href} target="_blank" rel="noopener" class="text-sm text-gray-400 hover:text-white transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h4 class="text-white font-semibold uppercase text-sm mb-4">Folge uns</h4>
        <ul class="space-y-2">
          {social.map(item => (
            <li>
              <a href={item.href} target="_blank" rel="noopener" class="text-sm text-gray-400 hover:text-white transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        Â© {currentYear} {siteConfig.footer.copyright}
      </p>
      <div class="flex gap-6">
        <a href="/impressum/" class="text-sm text-gray-400 hover:text-white transition-colors">
          Impressum
        </a>
        <a href="/datenschutz/" class="text-sm text-gray-400 hover:text-white transition-colors">
          Datenschutz
        </a>
      </div>
    </div>
  </div>
</footer>
