---
import { siteConfig } from '../config/site';

interface Props {
  items?: Array<{ name: string; url: string }>;
}

const { items = [] } = Astro.props;
const siteUrl = Astro.site?.toString() || siteConfig.url;

// Build breadcrumbs from URL if not provided
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = items.length > 0 ? items : [
  { name: 'Home', url: siteUrl },
  ...pathSegments.map((segment, index) => ({
    name: segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' '),
    url: `${siteUrl}/${pathSegments.slice(0, index + 1).join('/')}/`
  }))
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
};
---

{breadcrumbItems.length > 1 && (
  <script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
)}
