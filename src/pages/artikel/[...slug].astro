---
import { getCollection, render } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => {
    // Extract slug from the post id (e.g., "de/2025-06-09-angular-tutorial-deutsch" -> "angular-tutorial-deutsch")
    const idParts = post.id.split('/');
    // For de/ folder structure: "de/2020-09-01-article-name" -> "2020-09-01-article-name"
    const folderName = idParts.length > 1 ? idParts[1] : idParts[0];
    // Remove date prefix from folder name
    const slug = folderName.replace(/^\d{4}-\d{2}-\d{2}-/, '');

    return {
      params: { slug },
      props: { post, slug, folderName: `de/${folderName}` },
    };
  });
}

const { post, slug, folderName } = Astro.props;

// Render the post content
const { Content } = await render(post);

// Make slugs available for language switching
Astro.locals.currentSlug = slug;
if (post.data.translation_slug) {
  Astro.locals.translationSlug = post.data.translation_slug;
}
---

<PostLayout {...post.data} slug={slug} folderName={folderName}>
  <Content />
</PostLayout>
