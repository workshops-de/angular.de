---
import { getCollection, render } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => {
    // Extract slug from the post id (e.g., "2025-06-09-angular-tutorial-deutsch" -> "angular-tutorial-deutsch")
    const idParts = post.id.split('/');
    const folderName = idParts[0];
    // Remove date prefix from folder name
    const slug = folderName.replace(/^\d{4}-\d{2}-\d{2}-/, '');

    return {
      params: { slug },
      props: { post, slug, folderName },
    };
  });
}

const { post, slug, folderName } = Astro.props;
const { Content } = await render(post);
---

<PostLayout {...post.data} slug={slug} folderName={folderName}>
  <Content />
</PostLayout>
