---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Seite nicht gefunden" noindex={true}>
  <section class="py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-8xl font-bold text-gray-200 mb-4">404</h1>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Seite nicht gefunden</h2>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        Die gesuchte Seite existiert leider nicht oder wurde verschoben.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/" class="btn-gradient">
          Zur Startseite
        </a>
        <a href="/artikel/" class="px-6 py-3 border border-gray-300 rounded-lg font-medium text-gray-700 hover:border-primary hover:text-primary transition-colors">
          Zu den Artikeln
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
