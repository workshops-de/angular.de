---
import BaseLayout from '../../layouts/BaseLayout.astro';

const tutorials = [
  {
    slug: 'angular-tutorial-deutsch',
    title: 'Angular Grundlagen',
    description: 'Tutorial zu Angular - die neue Version des beliebtesten Single-Page-Application Frameworks. Die Grundlagen des Frameworks anhand eines Beispielprojektes.',
    icon: 'üÖ∞Ô∏è',
    color: 'from-primary-500 to-accent-500'
  }
];
---

<BaseLayout
  title="Einsteiger Tutorials"
  noindex={true}
>
  <!-- Header -->
  <section class="bg-gradient-to-br from-primary-50 to-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Einsteiger Tutorials</h1>
      <p class="text-lg text-gray-600">
        Hier bieten wir euch einen einfachen Einstieg in die Themen Angular, NestJS und Redux!
      </p>
    </div>
  </section>

  <!-- Tutorials List -->
  <section class="py-12">
    <div class="container mx-auto px-4 max-w-3xl">
      <div class="space-y-4">
        {tutorials.map(tutorial => (
          <a
            href={`/artikel/${tutorial.slug}/`}
            class="group flex items-center gap-6 p-6 bg-white rounded-xl shadow-sm hover:shadow-lg transition-all"
          >
            <div class={`w-16 h-16 rounded-xl bg-gradient-to-br ${tutorial.color} flex items-center justify-center text-3xl flex-shrink-0`}>
              {tutorial.icon}
            </div>
            <div>
              <h2 class="text-xl font-semibold text-gray-900 group-hover:text-primary transition-colors">
                {tutorial.title}
              </h2>
              <p class="text-gray-600 mt-1">{tutorial.description}</p>
            </div>
            <svg class="w-6 h-6 text-gray-400 group-hover:text-primary transition-colors flex-shrink-0 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
